{
  "compilerOptions": {
    /* Language and Environment */
    "target": "esnext",
    /* Modules */
    "module": "nodenext",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "nodenext",
    /* Type Checking */
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "typeRoots": [
      "./src/types/",
      "./node_modules/@types/"
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}