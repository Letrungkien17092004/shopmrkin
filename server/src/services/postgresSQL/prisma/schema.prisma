generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma/client"
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Roles {
  id Int @id @default(autoincrement())
  roleName String @unique @db.VarChar(30)
  description String? @db.VarChar(255)

  // Relationship
  permissions Roles_Permissions[]
  users Users[]

  @@map("roles")
}

model Permissions {
  id Int @id @default(autoincrement())
  perName String @unique @db.VarChar(30)
  description String? @db.VarChar(255)

  // Relationship
  roles Roles_Permissions[]

  @@map("permission")
}

model Roles_Permissions {
  roleId Int 
  permisId Int

  // Relationship
  role Roles @relation(fields: [roleId], references: [id])
  permission Permissions @relation(fields: [permisId], references: [id])

  @@id([roleId, permisId])
  @@map("roles_permission")
}

model Users {
  id String @id @default(uuid(7))
  username String  @db.VarChar(50)
  account String  @db.VarChar(50) @unique
  password_hash String  @db.VarChar(255)
  email String @db.VarChar(255) @unique

  // Foreign key
  roleId Int 

  // Relationship
  role Roles @relation(fields: [roleId], references: [id])
  products Products[]
  variants Variants[]
  media Media[]

  // Time
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("users")
}

model Categories {
  id Int @id @default(autoincrement())
  name String
  slug String @unique
  products Products[]
}

model Products {
  id String @id @default(uuid(7))
  product_code Int @unique @default(autoincrement())
  name String
  description String

  // Foreign key
  userId String
  categoryId Int 

  // Relationship
  category Categories @relation(fields: [categoryId], references: [id]) 
  variants Variants[]
  media Product_Media[]
  user Users @relation(fields: [userId], references: [id])

  // time
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}

model Variants {
  id String @id @default(uuid(7))
  name String
  sku String @unique
  stock Int
  price Decimal
  userId String

  // Foreign Key
  productId String

  // Relationship
  user Users @relation(fields: [userId], references: [id])
  product Products @relation(fields: [productId], references: [id])

  // Time
  createdAt DateTime @default(now())  
  updatedAt DateTime @updatedAt
}

model Media {
  id String @id @default(uuid(7))
  fileName String
  filePath String
  hostname String
  media_type MediaType
  size Int
  userId String 

  // Relationship
  products Product_Media[]
  user Users @relation(fields: [userId], references: [id])
  status MediaStatus @default(ORPHANED)

  // Time
  createdAt DateTime @default(now())  
  updatedAt DateTime @updatedAt
} 

enum MediaType {
  IMAGE
  VIDEO
}

enum MediaStatus {
  ORPHANED
  ASSIGNED
}

model Product_Media {
  productId String
  mediaId String

  // Relation ship
  product Products @relation(fields: [productId], references: [id])
  media Media @relation(fields: [mediaId], references: [id])

  @@id([productId, mediaId])
}